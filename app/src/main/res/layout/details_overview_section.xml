<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/details_overview_section_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_bookmark_white_36dp"
        android:tint="#A28E8E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/details_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:textColor="@color/details_text"
        android:textSize="@dimen/general_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_overview_section_icon"
        tools:text="This is a sample overview.\nWith multiple lines of text."/>

    <TextView
        android:id="@+id/details_overview_section_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/generic_margin"
        android:layout_marginStart="@dimen/small_margin"
        android:text="@string/overview"
        android:textColor="#000000"
        android:textSize="@dimen/general_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/details_overview_section_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/details_overview_section_icon"
        app:layout_constraintTop_toTopOf="@+id/details_overview_section_icon"
        android:layout_marginRight="@dimen/generic_margin"
        android:layout_marginLeft="@dimen/small_margin" />
</androidx.constraintlayout.widget.ConstraintLayout>